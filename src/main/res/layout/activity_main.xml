<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выберите жанр"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Жанр 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/genre1_image"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/phonk"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_image_background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Фонк"
                    android:textColor="@color/textColor"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Жанр 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/genre2_image"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/nike"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_image_background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Электроника"
                    android:textColor="@color/textColor"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Жанр 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/genre3_image"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/moloko"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_image_background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Джаз"
                    android:textColor="@color/textColor"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Жанр 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/genre4_image"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/beauty"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_image_background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Опера"
                    android:textColor="@color/textColor"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </GridLayout>
    </LinearLayout>
</ScrollView>
